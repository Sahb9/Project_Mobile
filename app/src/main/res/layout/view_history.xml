<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_viewHistory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#667eea"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp"
    >

    <LinearLayout
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/gradient_button1"
        android:orientation="vertical"
        >
        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow>
                <TextView
                    android:id="@+id/textHistorySubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="6dp"
                    android:text="ten chu de "
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textInputSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="6dp"
                    android:textColor="@color/black"
                    android:text="absd "
                    android:textSize="16sp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/textHistoryTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="6dp"
                    android:textColor="@color/black"
                    android:text="Time "
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textInputDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="6dp"
                    android:textColor="@color/black"
                    android:text="Time "
                    android:textSize="16sp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/textCurrentTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:padding="6dp"
                    android:textColor="@color/black"
                    android:text="Current Times: "
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textInputCurrent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="6dp"
                    android:textColor="@color/black"
                    android:text="Time "
                    android:textSize="16sp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>